// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  name          String?
  email         String?        @unique
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  sessions      Session[]
  subscriptions Subscription[]
  categories    Category[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Subscription {
  id               String        @id @default(cuid())
  appName          String
  serviceKey       String?       // Key from ServiceIcons (netflix, spotify, etc.)
  category         String
  price            Int
  currency         String        @default("VND")
  billingCycle     String        // "monthly", "yearly", "quarterly"
  notificationDays Int           @default(3)
  isShared         Boolean       @default(false)
  createdBy        String?
  creator          User?         @relation(fields: [createdBy], references: [id], onDelete: Cascade)
  familyGroups     FamilyGroup[]
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
}

model FamilyGroup {
  id             String       @id @default(cuid())
  name           String
  purchaseDate   DateTime?
  expirationDate DateTime?
  notes          String?
  subscriptionId String
  subscription   Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  members        Member[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model Member {
  id              String      @id @default(cuid())
  name            String
  email           String
  amountPaid      Int
  nextPaymentDate DateTime
  status          String      @default("active") // "active", "pending", "overdue"
  familyGroupId   String
  familyGroup     FamilyGroup @relation(fields: [familyGroupId], references: [id], onDelete: Cascade)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model EmailLog {
  id        String   @id @default(cuid())
  memberId  String
  email     String
  subject   String
  status    String   // "sent", "failed"
  error     String?
  sentAt    DateTime @default(now())
}

model Category {
  id           String   @id @default(cuid())
  categoryName String
  description  String?
  color        String   @default("#3B82F6") // Hex color code
  status       String   @default("active") // "active", "inactive"
  createdBy    String?
  creator      User?    @relation(fields: [createdBy], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([categoryName, createdBy])
}

model PricingPlan {
  id            String           @id @default(cuid())
  name          String           @unique // "Free", "Pro", "Team"
  description   String
  monthlyPrice  Int              @default(0) // in cents (e.g., 999 = $9.99)
  yearlyPrice   Int              @default(0) // in cents
  currency      String           @default("USD")
  badge         String? // "Most popular", "Best value", etc.
  cta           String           @default("Get started")
  isHighlighted Boolean          @default(false)
  isActive      Boolean          @default(true)
  features      PricingFeature[]
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
}

model PricingFeature {
  id            String      @id @default(cuid())
  name          String // "Unlimited subscriptions", "Email reminders", etc.
  description   String? // Optional detailed description
  isIncluded    Boolean     @default(true)
  displayOrder  Int         @default(0) // For ordering features in UI
  pricingPlanId String
  pricingPlan   PricingPlan @relation(fields: [pricingPlanId], references: [id], onDelete: Cascade)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model FAQ {
  id           String   @id @default(cuid())
  question     String
  answer       String
  displayOrder Int      @default(0) // For ordering FAQs in UI
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model CheckoutSession {
  id            String   @id @default(cuid())
  userId        String?
  planId        String
  billingCycle  String // "monthly" or "yearly"
  amount        Int // in cents
  currency      String   @default("USD")
  status        String   @default("pending") // "pending", "paid", "failed", "canceled"
  customerEmail String?
  customerName  String?
  country       String?
  taxAmount     Int      @default(0)
  discountAmount Int     @default(0)
  couponCode    String?
  paymentMethod String? // "card", "bank_transfer", "wallet"
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  expiresAt     DateTime
}

model UserSubscription {
  id              String   @id @default(cuid())
  userId          String
  planId          String
  status          String   @default("active") // "active", "canceled", "expired", "trial"
  billingCycle    String // "monthly" or "yearly"
  startDate       DateTime @default(now())
  nextBillingDate DateTime
  canceledAt      DateTime?
  expiresAt       DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Invoice {
  id                  String    @id @default(cuid())
  invoiceNumber       String    @unique
  userId              String
  subscriptionId      String?
  billingPeriodStart  DateTime
  billingPeriodEnd    DateTime
  subtotal            Int // in cents
  tax                 Int       @default(0)
  total               Int
  currency            String    @default("USD")
  status              String    @default("unpaid") // "paid", "unpaid", "failed", "canceled"
  issuedAt            DateTime  @default(now())
  paidAt              DateTime?
  dueDate             DateTime
  payments            Payment[]
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
}

model Payment {
  id             String   @id @default(cuid())
  invoiceId      String
  invoice        Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  userId         String
  amount         Int // in cents
  currency       String   @default("USD")
  method         String // "card", "bank_transfer", "wallet"
  status         String   @default("pending") // "pending", "completed", "failed", "refunded"
  transactionRef String?
  metadata       String? // JSON string for additional data
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model BillingProfile {
  id            String   @id @default(cuid())
  userId        String   @unique
  billingEmail  String
  companyName   String?
  address       String?
  city          String?
  state         String?
  zipCode       String?
  country       String?
  taxId         String?
  paymentMethod String? // JSON string
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
